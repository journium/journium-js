{
  "name": "journium-workspace",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "description": "Journium JavaScript SDK monorepo - Analytics SDK for web, React, and Next.js",
  "homepage": "https://github.com/journium/journium-js",
  "bugs": {
    "url": "https://github.com/journium/journium-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/journium/journium-js.git"
  },
  "keywords": [
    "analytics",
    "tracking",
    "journium",
    "javascript",
    "typescript",
    "react",
    "nextjs",
    "monorepo"
  ],
  "author": "Journium Team",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "test:unit": "turbo test:unit",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean",
    "package": "export PACKAGE_DEST=$(pwd)/dist && turbo package",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish --provenance"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@turbo/gen": "^1.10.12",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.2",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "turbo": "^1.10.12",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.9.0"
  }
}