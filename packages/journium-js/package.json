{
  "name": "@journium/js",
  "version": "1.1.0",
  "license": "MIT",
  "description": "Journium JavaScript SDK for web browsers - Track events, pageviews, and user interactions with ease",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "homepage": "https://github.com/journium/journium-js",
  "bugs": {
    "url": "https://github.com/journium/journium-js/issues"
  },
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "build:cdn": "rollup -c --environment BUILD:cdn",
    "build:watch": "rollup -c -w",
    "dev": "rollup -c -w",
    "test": "jest --config jest.config.cjs",
    "test:unit": "jest --config jest.config.cjs",
    "test:cdn": "echo 'Open test-cdn.html in browser to test CDN build'",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepare:cdn": "pnpm build && echo 'CDN files ready: dist/journium.js and dist/journium.min.js'"
  },
  "dependencies": {
    "@journium/core": "workspace:*"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/node": "^20.0.0",
    "rollup": "^3.0.0",
    "rollup-plugin-dts": "^5.0.0",
    "tslib": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/journium/journium-js.git",
    "directory": "packages/journium-js"
  },
  "keywords": [
    "analytics",
    "tracking",
    "journium",
    "javascript",
    "browser",
    "web-analytics",
    "event-tracking",
    "pageview",
    "autocapture",
    "typescript"
  ],
  "author": "Journium Team",
  "publishConfig": {
    "access": "public"
  }
}
